// SERIE.cpp: define el punto de entrada de la aplicación de consola.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;
double Sumatoria(int N,int X);


void main()
{
	int N,X;
	double SUMA;
	do{
	cout<<"Ingrese un valor para N que se impar: "<<endl;
	cin>>N;
	}while(N%2==0);
	do{
	cout<<"Ingrese un valor para X "<<endl;
	cin>>X;
	}while(N<0);

	SUMA = Sumatoria(N,X);
	cout<<endl<<"LA sumatoria es igual a "<<SUMA<<endl;

	_getch();
}

int fact(int n)
{
	int f=1,i=1;
	while (i<=n)
	{
		f=f*i;
		i++;
	}
	return(f);
}

double Sumatoria(int N,int X)
{
	double S = 3;
	int a = 1;
	for(int i=1;i<=N;i=i+2)
	{
		if (a%2==0)
		{
			S = S + (pow(X,i)/fact(i));
		}
		else
		{
			S = S - (pow(X,i)/fact(i));
		}
		a++;
	}
	return(S);
}


#########################################################3##########################################################

// Examen.cpp: define el punto de entrada de la aplicación de consola.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include <string>

using namespace std;

void main()
{
	string nombre;
	cout<<"Ingrese un Nombre:";
	getline(cin,nombre);

	int c=0;
	int l=nombre.length();
	for (int i =0;i<l;i++)
	{
		if(nombre.at(i)>='A'&&nombre.at(i)<='Z')
		{
			c++;
		}

	}
	cout<<endl<<"Cantidad de Mayusculas=="<<c;

	_getch();
}






