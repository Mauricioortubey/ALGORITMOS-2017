// quitar las vocales de una frase.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include <string>

using namespace  std;


void main()
{
	string frase;
	string vocales;
	string voc;
	int tam,a,e,i,o,u;

	cout<<"Ingrese la frase: "<<endl;
	getline(cin,frase);
	tam=frase.length();
	for(int i=0;i<tam;i++)
	   {
		   vocales=frase.substr(i,1);
		   if(vocales=="a"||vocales=="e"||vocales=="i"||vocales=="o"||vocales=="u")
		      {
				  voc=voc+vocales;
		      }
	
	   }

cout<<voc;
getch();
}


