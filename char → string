#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include <string>

using namespace std;

string ChartoString(char cadena[]){
	int l=0,i=0;
	string Aux;
	l = strlen(cadena);
	while(i<=l){
		Aux = Aux + cadena[i];
		i++;
	}
	fflush(stdin);
	Aux = Aux + "\0";
	return Aux;
}

